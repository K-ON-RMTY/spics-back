<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.spicsback.dao.PicsDao">

    <resultMap type="com.design.spicsback.entity.Pics" id="TPicsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="albumId" column="album_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="uploadTime" column="upload_time" jdbcType="TIMESTAMP"/>
        <result property="collectNum" column="collect_num" jdbcType="INTEGER"/>
        <result property="likeNum" column="like_num" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TPicsMap">
        select
          id, url, description, album_id, user_id, upload_time, collect_num, like_num
        from spics.t_pics
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TPicsMap">
        select
          id, url, description, album_id, user_id, upload_time, collect_num, like_num
        from spics.t_pics
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TPicsMap">
        select
          id, url, description, album_id, user_id, upload_time, collect_num, like_num
        from spics.t_pics
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
            <if test="albumId != null">
                and album_id = #{albumId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="uploadTime != null">
                and upload_time = #{uploadTime}
            </if>
            <if test="collectNum != null">
                and collect_num = #{collectNum}
            </if>
            <if test="likeNum != null">
                and like_num = #{likeNum}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into spics.t_pics(url, description, album_id, user_id, upload_time, collect_num, like_num)
        values (#{url}, #{description}, #{albumId}, #{userId}, #{uploadTime}, #{collectNum}, #{likeNum})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update spics.t_pics
        <set>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="albumId != null">
                album_id = #{albumId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="uploadTime != null">
                upload_time = #{uploadTime},
            </if>
            <if test="collectNum != null">
                collect_num = #{collectNum},
            </if>
            <if test="likeNum != null">
                like_num = #{likeNum},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from spics.t_pics where id = #{id}
    </delete>

</mapper>