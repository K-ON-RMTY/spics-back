<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.spicsback.dao.TagForPicDao">

    <resultMap type="com.design.spicsback.entity.TagForPic" id="TTagForPicMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="tagName" column="tag_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TTagForPicMap">
        select
          id, user_id, tag_name, create_time
        from spics.t_tag_for_pic
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TTagForPicMap">
        select
          id, user_id, tag_name, create_time
        from spics.t_tag_for_pic
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TTagForPicMap">
        select
          id, user_id, tag_name, create_time
        from spics.t_tag_for_pic
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="tagName != null and tagName != ''">
                and tag_name = #{tagName}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into spics.t_tag_for_pic(user_id, tag_name, create_time)
        values (#{userId}, #{tagName}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update spics.t_tag_for_pic
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="tagName != null and tagName != ''">
                tag_name = #{tagName},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from spics.t_tag_for_pic where id = #{id}
    </delete>

</mapper>